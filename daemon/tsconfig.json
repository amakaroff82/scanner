{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./dist",
    "newLine": "LF",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./node_modules/**"
  ]
}
